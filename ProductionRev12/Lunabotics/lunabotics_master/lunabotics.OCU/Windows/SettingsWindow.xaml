<Window x:Class="lunabotics.OCU.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:lunabotics.OCU.Converters"
        xmlns:views="clr-namespace:lunabotics.OCU.Views"
        Title="Settings" Style="{DynamicResource ToolWindowStyle}" SizeToContent="WidthAndHeight">
    <Grid Height="300" Width="300">
        <TabControl BorderBrush="Transparent" Background="{DynamicResource ToolWindowControlBackgroundBrush}" 
                    TabStripPlacement="Top" ItemContainerStyle="{DynamicResource ToolWindowTabItemStyle}">
            <TabItem Header="General Settings">
                <views:SettingsView/>
            </TabItem>
            <TabItem Header="Controller Settings">
                <views:ControllerSettingsView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
